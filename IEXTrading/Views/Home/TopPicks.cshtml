@model IEnumerable<IEXTrading.Models.Stock>
<h2>Top stocks to buy</h2>
<hr />
<p>Selection criteria:</p>
<p>- Price reversal detection tool</p>
<p>- Common shares only (no preferred shares, ADRs etc.)</p>
<p>- Market capitalization greater than or equal to $300m</p>
<p>- Price drop within last 12 months</p>
<p>- Price growth within last 5 days</p>
<p>- Sorted by biggest price drop for the last 12 months (the higher the drop the higher potential reversal movement)</p>
<p></p>
<hr />
<p></p>
<table class="table">
    <thead>
        <tr>
            <th>
                Symbol
            </th>
            <th>
                Name
            </th>
            <th>
                1 year price change
            </th>
            <th>
                5 day price change
            </th>
            <th>
                Market Capitalization
            </th>
            <th>
                Link to Graph
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.symbol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.companyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.year1ChangePercent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.day5ChangePercent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.marketcap)
            </td>
            <td>
                <a asp-controller="Home" asp-action="Chart" asp-route-symbol=@item.symbol>Chart</a>
            </td>
        </tr>
        }

    </tbody>
</table>
<p></p>
<hr />
<p></p>
<p>!!!WARNING!!! Update of database will a) immediately  delete all existing records and b) will take about 30 minutes to complete.</p>
<p></p>
<a asp-controller="Home" asp-action="PopulateStocks"><img src="~/images/button_save-data.png" /></a>